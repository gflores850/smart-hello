<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="smart_hello.MainPage">

    <ScrollView>
        <VerticalStackLayout 
            Padding="30"
            Spacing="25"
            HorizontalOptions="Center">


            <Label Text="Welcome enter your Name and Last Name"
                   FontSize="32"
                   HorizontalOptions="Center" />
            <Entry x:Name="Name"
                   FontSize="18" />
            <Entry x:Name="LastName"
                   FontSize="18"
                   Placeholder="User_LastName" />
            <Button Text="Summit"
                    FontSize="18"
                    Clicked="When_do_Clicked"
                    HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
